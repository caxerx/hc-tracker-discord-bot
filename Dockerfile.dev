FROM node:24-alpine

WORKDIR /app

# Enable pnpm via Corepack
RUN corepack enable

# Copy package files
COPY package.json pnpm-lock.yaml* ./

# Install dependencies
RUN pnpm install

# Copy source code
COPY . .

# Expose port for debugging if needed
EXPOSE 3000

# Run in development mode with hot reload
CMD ["pnpm", "dev"]
